extends main_layout
block content
    if update_msg 
        p #{update_msg}
    section(class="sign-page")
        form(action="/updateUserDetails", method="post")
            label(for="fname") שם פרטי
            br
            input(type="text", name="fname", id="fname", value=user_details.first_name, required="required")
            p #{fname_err || ''}
            label(for="lname") שם משפחה
            br
            input(type="text", name="lname", id="lname", value=user_details.last_name, required="required")
            p #{lname_err || ''}
            label(for="phoneNumber") טלפון
            br
            input(type="tel", name="phoneNumber", id="phoneNumber", minlength="10", maxlength="10", value=user_details.phone_number, required="required")
            br
            label(for="cityChoice") בחר עיר
            br
            input(list="cities", name="cityChoice", id="cityChoice", value=user_details.city, required="required")
            br
            datalist(id="cities")
                option(value="באר שבע")
                option(value="להבים")
                option(value="עומר")
                option(value="שדרות")
                option(value="אופקים")  
            label(for="Email") אימייל
            br
            input(type="email", name="Email", id="Email", value=email, style="background-color: darkgray;", readonly="readonly")
            br
            p(id="email-error")
            label(for="Password") שינוי סיסמה
            br
            input(type="password", name="Password", id="Password")
            p #{pass_err || ''}
            button(type="submit", class="button") עדכנ/י

        a(href="http://localhost:3000/my_groups") הקבוצות שלי